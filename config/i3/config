bindsym Ctrl+space exec --no-startup-id "rofi -show run -font 'Source Code Pro for Powerline Regular 9'"
bindsym Ctrl+Shift+space exec --no-startup-id "rofi -show drun -font 'Source Code Pro for Powerline Regular 9'"

